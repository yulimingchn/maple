<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dawn.maple.mapper.CategoryMapper">
    <resultMap id="BaseResultMap" type="com.dawn.maple.bean.Category">
        <id column="id" property="id"/>
        <result column="cate_name" property="cateName"/>
        <result column="type" property="type"/>
        <result column="create_date" property="createDate"/>
    </resultMap>
    <select id="getAllCategories" resultMap="BaseResultMap">
        SELECT * FROM category
    </select>
    <select id="getCategoriesByType" resultMap="BaseResultMap">
        SELECT * FROM category WHERE type = #{type}
    </select>
    <delete id="deleteCategoryByIds">
        DELETE FROM category WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </delete>
    <update id="updateCategoryById" parameterType="com.dawn.maple.bean.Category">
        UPDATE category SET cate_name=#{cateName} WHERE id=#{id}
    </update>
    <insert id="addCategory" parameterType="com.dawn.maple.bean.Category">
        INSERT INTO category SET create_date=#{createDate},cate_name=#{cateName},type=#{type}
    </insert>
    <select id="getCategoryDetail" parameterType="Integer" resultMap="BaseResultMap">
        SELECT * FROM category WHERE id = #{id}
    </select>

</mapper>