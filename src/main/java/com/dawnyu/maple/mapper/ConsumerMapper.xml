<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dawnyu.maple.mapper.ConsumerMapper">
    <resultMap id="BaseResultMap" type="com.dawnyu.maple.bean.Consume">
        <id column="id" property="id"/>
        <result column="consume_name" property="consumeName"/>
        <result column="consume_amount" property="consumeAmount"/>
        <result column="category_id" property="categoryId"/>
        <result column="category_name" property="categoryName"/>
        <result column="consume_desc" property="consumeDesc"/>
        <result column="consume_date" property="consumeDate"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="getDataStatistics" resultType="com.dawnyu.maple.dto.ConsumeStatisticsDTO">
        SELECT
            consume_date AS consumeDate,
            SUM(consume_amount) AS totalAmount
        FROM
            consume
        GROUP BY
            consume_date
        ORDER BY
            consume_date ASC
    </select>

    <insert id="addConsume" parameterType="com.dawnyu.maple.bean.Consume" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO consume SET
        consume_name=#{consumeName},
        consume_amount=#{consumeAmount},
        category_id=#{categoryId},
        category_name=#{categoryName},
        consume_desc=#{consumeDesc},
        consume_date=#{consumeDate},
        create_time=#{createTime},
        update_time=#{updateTime}
    </insert>
    <select id="selectListByKeyword" resultMap="BaseResultMap">
        SELECT * FROM consume
        <where>
            <if test="keyword!=null">
                AND consume_name LIKE concat('%',#{keyword},'%')
            </if>
        </where>
        ORDER BY consume_date DESC,create_time DESC limit #{start},#{count};
    </select>

    <select id="selectTotalCount" resultType="int">
        SELECT count(*) FROM consume
        <where>
            <if test="keywords=null">
                AND consume_name LIKE concat('%',#{keywords},'%')
            </if>
        </where>
    </select>

    <delete id="deleteConsumeByIds">
        DELETE FROM consume WHERE id IN
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </delete>
    <select id="getConsumeById" resultMap="BaseResultMap">
        SELECT * FROM consume WHERE id = #{id}
    </select>

</mapper>